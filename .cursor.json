{
  "name": "docs_parser",
  "language": "python",
  "formatOnSave": true,
  "lintOnSave": true,
  "defaultFormatter": "black",
  "lineLength": 100,
  "indentSize": 4,
  "paths": {
    "src": "./src",
    "tests": "./tests",
    "data": "./data",
    "config": "./config"
  },
  "search": {
    "excludePatterns": [
      "data/raw/**",
      "data/processed/**",
      "**/__pycache__/**",
      "**/*.pyc",
      "**/venv/**",
      "**/env/**"
    ]
  },
  "python": {
    "analysis": {
      "typeCheckingMode": "basic",
      "diagnosticMode": "workspace",
      "inlayHints": {
        "enabled": true,
        "variableTypes": true,
        "functionReturnTypes": true
      }
    },
    "formatting": {
      "provider": "black"
    },
    "linting": {
      "enabled": true,
      "pylintEnabled": true,
      "flake8Enabled": true,
      "mypyEnabled": true
    }
  },
  "editor": {
    "tabSize": 4,
    "insertSpaces": true,
    "rulers": [100],
    "formatOnPaste": true,
    "formatOnType": true,
    "wordWrap": "off",
    "detectIndentation": true,
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true
  }
}
